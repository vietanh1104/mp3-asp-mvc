@{
    ViewBag.Title = "Top nghệ sĩ hàng đầu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var authorList = ViewData["AuthorList"];
    ViewData["SelectHome"] = "active";
}
<title> Poply Music - Top nghệ sĩ</title>
<head>
    <link rel="stylesheet" href="~/css/explorer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ListArtist.css" asp-append-version="true" />
</head>

<div class="col-10 right-div">
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="header">

            <div class="header-square">
                <p>Top Nghệ sĩ Việt Nam</p>
            </div>

            <div class="header-info">
                <h1>Top Nghệ sĩ Việt Nam</h1>
                <h2>Nghệ sĩ hàng đầu tại Việt Nam</h2>
                <p>Thông tin cập nhật hàng tuần về những nghệ sĩ được nghe nhiều nhất hiện nay tại Việt Nam.</p>
                <p class="spotify">Poply Music • 23,615 lượt lưu • khoảng 3 giờ • 4 bản nhạc mới</p>
            </div>
        </div>

        <!-- Playlist Section -->
        <div class="playlist">
            <div class="table-header">
                <div class="col-title"># Nghệ sĩ</div>
                <div class="col-album">Số ca khúc đã phát hành</div>
                <div class="col-album">Số lượt phát</div>
            </div>

            <!-- Songs -->

            <partial name="./Common/Media/Carousel/_ListArtist" model="authorList" />

            <!-- Repeat the song div for more songs... -->
        </div>
    </div>
</div>





