@model mp3.mvc.Models.MediaAddViewModel
@{
    ViewData["Title"] = "Thêm mới";
}

<div class="col-10">
    <h3>
        Thêm mới bài hát
    </h3>

    <form asp-action="Add" asp-controller="Media" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Name" class="form-label">Tên bài hát</label>
            <input asp-for="Name" id="Name" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Description" class="form-label">Mô tả</label>
            <input asp-for="Description" id="Description" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="CategoryId" class="form-label">Thể loại</label>
            <select class="form-select custom-select" asp-for="CategoryId" id="CategoryId" aria-label="Tên thể loại">
                @for (var i = 0; i < ViewBag.CategoryData.Count; i++)
                {
                    var item = ViewBag.CategoryData[i];
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="AuthorId" class="form-label">Ca sĩ</label>
            <select class="form-select custom-select" asp-for="AuthorId" id="AuthorId" aria-label="Tên ca sĩ">
                @for (var i = 0; i < ViewBag.AuthorData.Count; i++)
                {
                    var item = ViewBag.AuthorData[i];
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="ContentFile" class="form-label">File</label>
            <input asp-for="ContentFile" id="ContentFile" type="file" class="form-control" multiple required accept=".mp3, .wav" />
        </div>

        <div class="form-group">
            <label for="Avatar" class="form-label">Ảnh</label>
            <input name="Avatar" id="Avatar" type="file" class="form-control" multiple required accept=".jpg, .png, .jepg" />
        </div>

        <div class="d-flex flex-row-reverse">
            <button class="d-block rounded-3 btn btn-primary mx-1" type="submit" style="width: 100px;">Lưu</button>
            <a class="d-block rounded-3 btn btn-danger mx-1" href="/media/manage" style="width: 100px;">Hủy</a>
        </div>
    </form>

</div>


<style>
/* Main container styling */
.col-10 {
    background-color: #1c1c1e;
    padding: 30px;
    border-radius: 15px; 
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3); 
    margin: 50px auto;
    color: white;
}

/* Heading styling */
h3 {
    text-align: center;
    font-size: 28px;
    margin-bottom: 30px;
    color: #1db954;
    font-family: 'Poppins', sans-serif;
}

/* Form Group Styling */
.form-group {
    margin-bottom: 20px;
    position: relative;
}

/* Label Styling */
.form-label {
    display: block;
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 8px;
    color: #e0e0e0;
}

/* Input and Select Styling */
.form-control,
.form-select {
    background-color: #2c2c2e;
    color: #fff;
    border: 1px solid #4d4d4e;
    padding: 12px 15px;
    border-radius: 10px;
    font-size: 14px;
    width: 100%;
    transition: border-color 0.3s ease-in-out;
    font-family: 'Poppins', sans-serif;
}

/* Focus styles for inputs */
.form-control:focus,
.form-select:focus {
    border-color: #1db954; 
    box-shadow: 0 0 10px rgba(29, 185, 84, 0.5); 
    outline: none;
}

/* File input styling */
input[type="file"] {
    padding: 8px;
}

/* Button Styling */
button.btn-primary {
    background-color: #1db954; 
    border: none;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 30px;
    transition: background-color 0.3s ease;
    font-family: 'Poppins', sans-serif;
}

button.btn-primary:hover {
    background-color: #17a34c; 
}

/* Cancel Button */
a.btn-danger {
    background-color: #ff3b30; 
    border: none;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    text-align: center;
    border-radius: 30px;
    text-decoration: none;
    transition: background-color 0.3s ease;
    font-family: 'Poppins', sans-serif; 
}

a.btn-danger:hover {
    background-color: #d32f2f;
}

/* Button container */
.d-flex.flex-row-reverse {
    display: flex;
    gap: 20px;
}

</style>