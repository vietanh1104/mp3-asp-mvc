@model AuthorUpdateViewModel
@{
    ViewData["Title"] = "Chỉnh sửa " + Model.Name;
}

<div class="col-10" style="margin-bottom: 44px; margin-top: 24px;min-height:53vh;">
    <h3 style=" color: white">
        Chỉnh sửa thông tin ca sĩ @Model.Name
    </h3>

    <form method="post" asp-action="update" asp-asp-controller="author" enctype="multipart/form-data">
        <input style="display: none;" name="Id" value="@Model.Id" />
        <table class="table">
            <tr>
                <td style="color: white">
                    Tên ca sĩ
                </td>
                <td>
                    <input name="Name" type="text" value="@Model.Name" />
                </td>
            </tr>
            <tr>
                <td style="text-align:center; align-content:center; color: white">
                    Ảnh:
                </td>
                <td>
                    <input name="Avatar" type="file" class="form-control" />
                </td>
            </tr>
        </table>


        <div class="d-flex flex-row-reverse">
            <button style="width: 100px;" class="d-block rounded-3 btn btn-primary mx-1" type="submit">Lưu</button>
            <a style="width: 100px;" class="d-block rounded-3 btn btn-danger mx-1" href="/author/getDetail?id=@Model.Id">Hủy</a>
        </div>

    </form>
</div>

